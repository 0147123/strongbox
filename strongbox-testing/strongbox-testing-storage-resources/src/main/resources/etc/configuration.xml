<configuration>

    <version>1.0</version>
    <port>48080</port>

    <storages>
        <storage>
            <basedir>target/storages/storage0</basedir>
            <name>storage0</name>

            <repositories>
                <!-- Secured repositories do not allow anonymous access -->
                <repository name="snapshots" basedir="/snapshots" policy="snapshots" implementation="file-system" type="hosted" secured="true" />
                <repository name="releases" basedir="/releases" policy="releases" implementation="file-system" type="hosted"/>
                <repository name="releases-with-trash" basedir="/releases-with-trash" policy="releases" implementation="file-system" type="hosted" trash-enabled="true"/>

                <repository name="snapshots-in-memory" basedir="/snapshots-in-memory" policy="snapshots" implementation="in-memory" type="hosted" secured="true" />
                <repository name="releases-in-memory" basedir="/releases-in-memory" policy="releases" implementation="in-memory" type="hosted"/>
            </repositories>
        </storage>
    </storages>

</configuration>

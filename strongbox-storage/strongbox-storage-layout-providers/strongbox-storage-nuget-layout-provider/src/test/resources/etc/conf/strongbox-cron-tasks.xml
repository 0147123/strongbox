<?xml version="1.0" encoding="UTF-8"?>
<cron-tasks-configuration>

    <cron-task-configuration>
        <name>ClearRepositoryTrashCronTask</name>
        <one-time-execution>false</one-time-execution>
        <immediate-execution>false</immediate-execution>
        <properties>
            <entry> <!-- mandatory -->
                <key>cronExpression</key>
                <value>0 11 11 11 11 ? 2100</value>
            </entry>
            <entry> <!-- mandatory -->
                <key>jobClass</key>
                <value>org.carlspring.strongbox.cron.jobs.ClearRepositoryTrashCronJob</value>
            </entry>
        </properties>
    </cron-task-configuration>

    <cron-task-configuration>
        <name>ClearRepositoryTrashCronJob</name>
        <one-time-execution>false</one-time-execution>
        <immediate-execution>false</immediate-execution>
        <properties>
            <entry> <!-- mandatory -->
                <key>cronExpression</key>
                <value>0 11 11 11 11 ? 2100</value>
            </entry>
            <entry> <!-- mandatory -->
                <key>jobClass</key>
                <value>org.carlspring.strongbox.cron.jobs.ClearRepositoryTrashCronJob</value>
            </entry>
            <entry> <!-- optional -->
                <key>storageId</key>
                <value>storage-common-proxies</value>
            </entry>
            <entry> <!-- optional -->
                <key>repositoryId</key>
                <value>maven-central</value>
            </entry>
        </properties>
    </cron-task-configuration>

    <cron-task-configuration>
        <name>RegenerateChecksumCronJob</name>
        <one-time-execution>false</one-time-execution>
        <immediate-execution>false</immediate-execution>
        <properties>
            <entry> <!-- mandatory -->
                <key>cronExpression</key>
                <value>0 11 11 11 11 ? 2100</value>
            </entry>
            <entry> <!-- mandatory -->
                <key>jobClass</key>
                <value>org.carlspring.strongbox.cron.jobs.RegenerateChecksumCronJob</value>
            </entry>
            <entry> <!-- optional -->
                <key>storageId</key>
                <value>storage-common-proxies</value>
            </entry>
            <entry> <!-- optional -->
                <key>repositoryId</key>
                <value>maven-central</value>
            </entry>
            <entry> <!-- optional -->
                <key>basePath</key>
                <value>org</value>
            </entry>
            <entry> <!-- optional, default false -->
                <key>forceRegeneration</key>
                <value>true</value>
            </entry>
        </properties>
    </cron-task-configuration>

    <cron-task-configuration>
        <name>DownloadRemoteFeedCronJob</name>
        <one-time-execution>false</one-time-execution>
        <immediate-execution>false</immediate-execution>
        <properties>
            <entry> <!-- mandatory -->
                <key>cronExpression</key>
                <value>0 11 11 11 11 ? 2100</value>
            </entry>
            <entry> <!-- mandatory -->
                <key>jobClass</key>
                <value>org.carlspring.strongbox.cron.jobs.DownloadRemoteFeedCronJob</value>
            </entry>
            <entry> <!-- mandatory -->
                <key>storageId</key>
                <value>storage-common-proxies</value>
            </entry>
            <entry> <!-- mandatory -->
                <key>repositoryId</key>
                <value>maven-central</value>
            </entry>
        </properties>
    </cron-task-configuration>

</cron-tasks-configuration>

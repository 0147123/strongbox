<configuration>
    <resolvers>
        <resolver>org.carlspring.strongbox.storage.resolvers.InMemoryLocationResolver</resolver>
        <resolver>org.carlspring.strongbox.storage.resolvers.FSLocationResolver</resolver>
    </resolvers>
    <storages>
        <storage>
            <basedir>storages/storage0</basedir>
            <name>storage0</name>

            <repositories>
                <repository name="repository0" basedir="/repository0" policy="snapshots" layout="maven2" type="hosted" />
                <!-- Secured repositories do not allow anonymous access -->
                <repository name="repository1" basedir="/repository1" policy="snapshots" layout="maven2" type="hosted" secured="true"/>
            </repositories>
        </storage>
    </storages>
    <version>1.0</version>
    <port>48080</port>
</configuration>

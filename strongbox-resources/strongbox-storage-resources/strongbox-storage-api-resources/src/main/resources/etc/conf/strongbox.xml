<configuration>

    <version>1.0</version>

    <baseUrl>http://localhost:48080/</baseUrl>
    <port>48080</port>

    <storages>
        <storage id="storage0">
            <repositories>
                <!-- Secured repositories do not allow anonymous access -->
                <repository id="releases" policy="release" implementation="file-system" type="hosted" allows-force-deletion="true"/>
                <repository id="releases-in-memory" policy="release" implementation="in-memory" type="hosted"/>
                <repository id="releases-with-redeployment" policy="release" implementation="file-system" type="hosted" allows-redeployment="true"/>
                <repository id="releases-with-trash" policy="release" implementation="file-system" type="hosted" trash-enabled="true"/>
                <repository id="releases-without-deployment" policy="release" implementation="file-system" type="hosted" allows-deployment="false"/>
                <repository id="releases-without-redeployment" policy="release" implementation="file-system" type="hosted" allows-deployment="false"/>
                <repository id="releases-without-delete" policy="release" implementation="file-system" type="hosted" allows-delete="false"/>
                <repository id="releases-without-delete-trash" policy="release" implementation="file-system" type="hosted" trash-enabled="true" allows-delete="false"/>
                <repository id="snapshots" policy="snapshot" implementation="file-system" type="hosted" secured="true" />
                <repository id="snapshots-in-memory" policy="snapshot" implementation="in-memory" type="hosted" secured="true" />

                <repository id="proxied-releases" policy="release" implementation="file-system" type="proxy">
                    <proxy-configuration host="localhost" port="8180" username="testuser" password="password" />
                    <remote-repository url="http://localhost:48080/releases/"
                                       username="maven"
                                       password="password"
                                       download-remote-indexes="true"
                                       auto-blocking="true"
                                       checksum-validation="true" />
                </repository>

                <repository id="group-releases" policy="release" implementation="group" type="group" secured="true">
                    <group>
                        <repository>releases</repository>
                        <repository>releases-in-memory</repository>
                        <repository>releases-with-redeployment</repository>
                        <repository>releases-with-trash</repository>
                        <repository>releases-without-deployment</repository>
                        <repository>releases-without-redeployment</repository>
                        <repository>releases-without-delete</repository>
                        <repository>releases-without-delete-trash</repository>
                    </group>
                </repository>
            </repositories>
        </storage>
    </storages>

    <routing-rules>
        <rule group-repository="group-releases" type="accept">
            <pattern>.*(com|org)/artifacts.in.releases.with.trash.*</pattern>
            <repositories>
                <repository>releases-in-memory</repository>
                <repository>releases-with-trash</repository>
                <repository>releases-with-redeployment</repository>
            </repositories>
        </rule>
        <rule group-repository="*" type="accept">
            <pattern>.*(com|org)/artifacts.in.releases.*</pattern>
            <repositories>
                <repository>releases</repository>
            </repositories>
        </rule>

        <rule group-repository="group-releases" type="deny">
            <pattern>.*(com|org)/artifacts.denied.in.memory.*</pattern>
            <repositories>
                <repository>releases-in-memory</repository>
            </repositories>
        </rule>
        <rule group-repository="*" type="deny">
            <pattern>.*(com|org)/artifacts.denied.by.wildcard.*</pattern>
            <repositories>
                <repository>releases</repository>
            </repositories>
        </rule>
    </routing-rules>

</configuration>
